<html>
  <head>
    <style>
      body {background: <%=
        if status == :correct
          "green"
        elsif status == :close
          "pink"
        elsif status == :way_wrong
          "red"
        else
          "white"
        end
          %>;}
    </style>
  </head>
  <body>
    <p>
      <%= message %>
    </p>
    <p>
      <%= "Guesses remaining: #{count}" %>
    </p>
    <p>
      <%= extra_message %>
    </p>
    <p>
      <form>
        <input type='text' name='guess' />
        <input type='submit' value='Guess!' />
      </form>
    </p>
  </body>
</html>
